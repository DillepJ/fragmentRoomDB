<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nic.sqlite.Activity.RegistrationScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_icon"
                android:padding="6dp"
                android:src="@drawable/back"
                android:layout_alignParentLeft="true">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="Sign Up"></TextView>
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/profile_img_rl"
                android:background="@drawable/profile_bg_circle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image_icon"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dslr_camera"></de.hdodenhof.circleimageview.CircleImageView>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_icon"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    android:layout_below="@+id/image_icon"
                    android:layout_toRightOf="@+id/image_icon"
                    android:layout_marginLeft="10dp"></ImageView>
            </RelativeLayout>


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="User Name"></TextView>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/user_info_rect">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/user_name_img"
                    android:src="@drawable/user_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"></ImageView>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/user_name_img"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:id="@+id/userNameTXINP"
                        app:boxStrokeColor="@android:color/white"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        android:padding="0dp"
                        android:hint="Username">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPersonName"
                            android:padding="0dp"
                            android:textColorHint="@color/gray"
                            android:hint="Username"
                            />

                    </com.google.android.material.textfield.TextInputLayout>





                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="User Name"></TextView>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/user_info_rect">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/mobile_no_img"
                    android:src="@drawable/user_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"></ImageView>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/mobile_no_img"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:id="@+id/mobile_no"
                        app:boxStrokeColor="@android:color/white"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        android:padding="0dp"
                        android:hint="Mobile Number">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPersonName"
                            android:padding="0dp"
                            android:maxLength="10"
                            android:textColorHint="@color/gray"
                            android:hint="Mobile Number"
                            />

                    </com.google.android.material.textfield.TextInputLayout>





                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:text="DOB"></TextView>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/user_info_rect">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/dob_img"
                    android:src="@drawable/date_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"></ImageView>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/dob_img"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:id="@+id/dob_txt"
                        app:boxStrokeColor="@android:color/white"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        android:padding="0dp"
                        android:hint="Username">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dob"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPersonName"
                            android:padding="0dp"
                            android:textColorHint="@color/gray"
                            android:hint="DOB"
                            />

                    </com.google.android.material.textfield.TextInputLayout>





                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:text="Password"></TextView>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/user_info_rect">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/password_img"
                android:src="@drawable/password_img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"></ImageView>


            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/password_img"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/gray"
                    android:hint="password"
                    app:hintEnabled="false"
                    app:boxStrokeColor="@android:color/white"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@android:color/transparent"
                    android:padding="0dp"
                    android:textColor="@android:color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        android:longClickable="false"
                        android:hint="Password"
                        android:textColorHint="@color/gray"
                        android:inputType="textPassword"/>

                </com.google.android.material.textfield.TextInputLayout>


            </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <Button
                    android:id="@+id/sign_up_btn"
                    android:background="@drawable/sign_in_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:text="SignUp"></Button>
            </RelativeLayout>


        </LinearLayout>
        </ScrollView>

    </RelativeLayout>



</RelativeLayout>