<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Screen2">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/template_bg_purple">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/logo_id"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/log_in_text"
                android:src="@drawable/app_logo"
                android:layout_centerInParent="true">


            </ImageView>
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Sign In"
                android:layout_marginTop="15dp"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/details_id"
                android:layout_height="wrap_content"
                android:background="@drawable/log_in_bg_background">

                <RelativeLayout
                    android:id="@+id/user_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">


                    <RelativeLayout
                        android:id="@+id/user_icon"
                        android:layout_centerVertical="true"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/new_rect_top_lefet_curve_purple_bg">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/profile"
                            android:tint="@color/white"
                            ></ImageView>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/background_light_gray"></View>


                    <EditText
                        android:layout_toRightOf="@+id/user_icon"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/full_transparent"
                        android:textColor="@color/black"
                        android:hint="User Name"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:id="@+id/user_name"></EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/user_name_layout"
                    android:id="@+id/user_pass_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:id="@+id/password_icon"
                        android:background="@drawable/new_rect_bottom_left_curve_purple_bg">

                        <ImageView
                            android:padding="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/password_img"
                            android:layout_centerInParent="true"
                            android:tint="@color/white"
                            ></ImageView>
                    </RelativeLayout>




                    <EditText
                        android:layout_toRightOf="@+id/password_icon"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/full_transparent"
                        android:textColor="@color/black"
                        android:hint="Password"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:id="@+id/user_password"></EditText>
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/details_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/log_in_btn_layout"
                android:background="@drawable/new_bg_log_in_btn_purple">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/log_in_btn"
                    android:text="Log In"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    ></TextView>
            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tv_version_nic_name_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">



            <TextView
                android:id="@+id/tv_version_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Version"
                android:layout_above="@+id/nic_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/nic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:text="Software Designed &amp; Developed by NIC"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>